<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>wct-binary</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>../wct-core/docs/</directory>
			<outputDirectory>docs</outputDirectory>
			<includes>
				<include>*.pdf</include>
				<include>license.txt</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../wct-core/etc</directory>
			<outputDirectory>etc</outputDirectory>
			<includes>
				<include>jta.jar</include>
				<include>postgresql-8.1-404.jdbc3.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../wct-core/db/setup</directory>
			<outputDirectory>sql</outputDirectory>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../wct-core/db/sql</directory>
			<outputDirectory>sql</outputDirectory>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
		<!-- Overwrite the schema sql from DB with the generated SQL -->
		<fileSet>
			<directory>../wct-core/target</directory>
			<outputDirectory>sql</outputDirectory>
			<includes>
				<include>wct*.sql</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../wct-core/db/upgrade</directory>
			<outputDirectory>upgrade</outputDirectory>
			<includes>
				<include>upgrade*.sql</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../wct-core/target/</directory>
			<outputDirectory>war</outputDirectory>
			<includes>
				<include>wct.war</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../wct-harvest-agent/target/</directory>
			<outputDirectory>war</outputDirectory>
			<includes>
				<include>wct-harvest-agent.war</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../wct-store/target/</directory>
			<outputDirectory>war</outputDirectory>
			<includes>
				<include>wct-store.war</include>
			</includes>
		</fileSet>
	</fileSets>

</assembly>